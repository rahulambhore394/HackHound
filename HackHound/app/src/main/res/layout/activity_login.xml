<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/iv_app_logo"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/iv_app_logo"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="@color/secondaryColor"
            android:fontFamily="sans-serif-black"
            android:textSize="29dp"
            android:id="@+id/tv_login_heading"
            android:layout_centerHorizontal="true"
            />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_username_login"
                android:layout_below="@id/tv_login_heading"
                android:hint="Username"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:drawableLeft="@drawable/icon_person"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:inputType="text"
                android:background="@drawable/et_rounded_corner"
                />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/et_password_login"
                android:layout_below="@id/et_username_login"
                android:hint="Password"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/secondaryColor"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:inputType="textPassword"
                android:background="@drawable/et_rounded_corner"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show Password"
                android:id="@+id/chk_pass_show_hide"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:textSize="15dp"
                android:layout_below="@id/et_password_login"
                android:backgroundTint="@color/primaryColor"
                android:buttonTint="@color/primaryColor"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_login_login"
                android:text="Login"
                android:textColor="@color/primaryColor"
                android:backgroundTint="@color/secondaryColor"
                android:textSize="18dp"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/chk_pass_show_hide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_new_user"
                android:text="New User Click Here"
                android:textSize="18dp"
                android:textColor="@color/secondaryColor"
                android:fontFamily="sans-serif-black"
                android:layout_below="@id/btn_login_login"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

