<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.PatientBookingActivity"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_appointment_booking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EditText for Patient's Name -->
            <EditText
                android:id="@+id/et_patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Patient's Name"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp" />

            <!-- EditText for Patient's Age -->
            <EditText
                android:id="@+id/et_patient_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Patient's Age"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp" />

            <!-- EditText for Mobile Number -->
            <EditText
                android:id="@+id/et_patient_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Mobile Number"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/et_doctor_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Doctor's Name"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp" />

            <!-- EditText for Hospital Name -->
            <EditText
                android:id="@+id/et_hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Hospital's Name"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp" />

            <!-- EditText for Selecting Appointment Time -->
            <EditText
                android:id="@+id/et_select_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Appointment Time"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/et_select_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Appointment Date"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="16dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Appointment"
                android:textAllCaps="false"
                android:padding="12dp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>